<%- include('partials/header', {title: 'Harga Material'}) %>

<div class="px-3 py-3">
    <div class="d-flex align-items-center mb-4">
        <a href="/dashboard" class="btn btn-light me-3"><i class="bi bi-arrow-left"></i></a>
        <h4 class="mb-0">Daftar Harga Material</h4>
    </div>

    <div class="card mb-3">
        <div class="card-body">
            <form action="/harga-material" method="GET">
                <div class="input-group">
                    <input type="text" class="form-control" name="search" placeholder="Cari nama material..." value="<%= searchQuery %>">
                    <button class="btn btn-primary" type="submit"><i class="bi bi-search"></i> Cari</button>
                </div>
            </form>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Nama Material</th>
                    <th scope="col">Harga Satuan</th>
                    <th scope="col">Toko Bangunan</th>
                    <th scope="col">Daerah</th>
                </tr>
            </thead>
            <tbody>
                <% if (materials.length > 0) { %>
                    <% materials.forEach(item => { %>
                        <tr>
                            <td><%= item.namaMaterial %></td>
                            <td>Rp <%= new Intl.NumberFormat('id-ID').format(item.hargaSatuan) %></td>
                            <td><%= item.tokoBangunan %></td>
                            <td><%= item.namaDaerah %></td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="4" class="text-center">
                            <% if (searchQuery) { %>
                                Material dengan nama "<%= searchQuery %>" tidak ditemukan.
                            <% } else { %>
                                Tidak ada data harga material.
                            <% } %>
                        </td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</div>

<%- include('partials/bottom_nav') %>
<%- include('partials/footer') %>