<%- include('partials/header', {title: 'Dashboard'}) %>

<div class="px-3 py-3">
    <div class="d-flex align-items-center mb-4">
        <i class="bi bi-person-circle fs-1 me-3"></i>
        <div>
            <h4 class="mb-0">Selamat Datang, <%= user.nama %>!</h4>
            <p class="text-muted mb-0"><%= user.jabatan %></p>
        </div>
    </div>

    <h5>Menu Utama</h5>
    <div class="row g-3">
        
        <div class="col-12 col-md-6">
            <a href="/profil" class="text-decoration-none">
                <div class="card text-center h-100 card-menu">
                    <div class="card-body d-flex flex-column justify-content-center">
                        <i class="bi bi-person-vcard fs-1 text-primary"></i>
                        <p class="mt-2 mb-0 fw-bold">Profil</p>
                    </div>
                </div>
            </a>
        </div>

        <% if (user.role === 'user') { %>
        <div class="col-12 col-md-6">
            <a href="/request" class="text-decoration-none">
                <div class="card text-center h-100 card-menu">
                    <div class="card-body d-flex flex-column justify-content-center">
                        <i class="bi bi-box-seam-fill fs-1 text-success"></i>
                        <p class="mt-2 mb-0 fw-bold">Request Material Proyek</p>
                    </div>
                </div>
            </a>
        </div>
        <% } %>

        <div class="col-12 col-md-6">
            <a href="/view-requests" class="text-decoration-none">
                <div class="card text-center h-100 card-menu">
                    <div class="card-body d-flex flex-column justify-content-center">
                        <i class="bi bi-eye-fill fs-1 text-info"></i>
                        <p class="mt-2 mb-0 fw-bold">View Request Material</p>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-12 col-md-6">
            <a href="/harga-material" class="text-decoration-none">
                <div class="card text-center h-100 card-menu">
                    <div class="card-body d-flex flex-column justify-content-center">
                        <i class="bi bi-tags-fill fs-1 text-warning"></i>
                        <p class="mt-2 mb-0 fw-bold">Harga Material</p>
                    </div>
                </div>
            </a>
        </div>

    </div>
</div>

<%- include('partials/bottom_nav') %>
<%- include('partials/footer') %>